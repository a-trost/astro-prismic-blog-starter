---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import { getSettings } from "../lib/prismicio";

const settings = await getSettings();

const siteTitle = settings.data.name;
const siteDescription = settings.data.description;
const copyright = settings.data.copyright;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={siteTitle} description={siteDescription} />
  </head>
  <body>
    <Header siteTitle={siteTitle} />
    <main>
      <slot />
    </main>
    <Footer copyright={copyright} />
  </body>
</html>
